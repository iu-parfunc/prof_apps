# This file contains things that are used 
# by all the individual benchmark makefiles.

STATS_FILE=statistics.out 


UBIPROF_CFLAGS='$(OPTLEVEL) -finstrument-functions -fno-inline -fno-optimize-sibling-calls $(EXCLUDED_FUNCTION_LIST)'
NOPROF_CFLAGS='$(OPTLEVEL) -finstrument-functions -fno-inline -fno-optimize-sibling-calls' 


UBIPROF_LD='-L../../../build/lib  -Wl,--no-as-needed -lubiprof -Wl,--export-dynamic -lstdc++ -lrt -lm -ldl'
NOPROF_LD='-L../../../build/noprof -Wl,--no-as-needed -lubiprof -lstdc++ -lrt -lm '


TIME=time -f "\nSELFTIMED %e\nUSER_TIME %U\nSYS_TIME %s" -a -o $(STATS_FILE) 

HSB_OUT=tail -n 4 $(STATS_FILE)


