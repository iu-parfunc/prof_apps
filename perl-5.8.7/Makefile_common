
# These are written from the perspective of one of the per-variant
# subdirs of this directory.

.PHONY: default clean run

default: 
	echo "Doing nothing during 'compile' phase... procrastinating until run."

# Build with ubiprof finstrument backend 
build-ubiprof:
	cd ..;./setup.sh 
	cd ../instrumented;\
		make clean;\
		make CFLAGS='$(OPTLEVEL) -finstrument-functions -fno-optimize-sibling-calls' LDFLAGS='-L../../../build -lrt -lubiprof -lm'

# Build with icc and profiling:
build-prof:
	echo -e "Building gzip with gprof enabled..."
	$(MAKE) CFLAGS='$(OPTLEVEL) -pg' build-shared

## OLD!! 
# build-dynaprof:
# 	cd ..; ./setup.sh dynaprof 
# 	echo -e "\nInstrumenting h264..."
# 	cd ..; ./instrument.sh
# 	echo -e "\nBuilding gzip with instrumentation...";
# 	cd ../instrumented;\
# 		make clean;\
# 		make CLFAGS='-O2' LDFLAGS='libdynaprof.a libzca-toggle.a -lrt -lelf -lpthread -lm' 

build-plain:
	cd ..; ./setup.sh
	cd ../instrumented;\
		time make CFLAGS='$(OPTLEVEL)' LDFLAGS='-lm'

build-shared:
	cd ..; ./setup.sh
	cd ../instrumented;\
		time make CFLAGS='$(CFLAGS)' LDFLAGS='-lm'

run-common: 
	# (cd ../instrumented && ./perlbench -Ilib test/input/diffmail.pl 4 800 10 17 19 300) 2>&1 
	cd ../instrumented;\
		(LD_LIBRARY_PATH=../../../build/:$(LD_LIBRARY_PATH) /usr/bin/time -f "SELFTIMED %e\nuser %U\nsys %S\n" ./perlbench -Ilib test/input/diffmail.pl 4 800 10 17 19 300) 2>&1
#	cd ../instrumented;\
		echo -e "*** LDD OUTPUT";\
		ldd perlbench

# We don't really need to clean, because we do a fresh "configure" on each build.
clean:
